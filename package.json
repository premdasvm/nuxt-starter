{
	"name": "nuxt-app",
	"private": true,
	"type": "module",
	"scripts": {
		"build": "nuxt build",
		"dev": "nuxt dev",
		"generate": "nuxt generate",
		"preview": "nuxt preview",
		"postinstall": "nuxt prepare",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"format": "prettier . --write",
		"typecheck": "vue-tsc --noEmit",
		"prepare": "husky install"
	},
	"dependencies": {
		"nuxt": "^3.13.0",
		"vue": "latest"
	},
	"devDependencies": {
		"@nuxt/eslint": "^0.4.0",
		"@nuxt/icon": "^1.4.5",
		"@nuxtjs/color-mode": "^3.4.2",
		"@nuxtjs/tailwindcss": "^6.12.1",
		"@vueuse/core": "^10.11.0",
		"@vueuse/nuxt": "^10.11.0",
		"eslint": "^9.8.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-prettier": "^5.2.1",
		"prettier": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.5",
		"tailwindcss": "^3.4.9",
		"typescript": "^5.5.4",
		"vue-tsc": "^2.0.29"
	},
	"lint-staged": {
		"*.{js,ts,vue}": [
			"eslint --fix",
			"prettier --write"
		],
		"*.{md,json}": "prettier --write"
	}
}
